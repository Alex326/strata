*
  box-sizing border-box

body
  font 300 13pt/1.5 'Source Sans Pro', Helvetica, sans-serif
  color #a2a2a2
  margin 0

h2, h3
  color #787878

h2
  font-size 2rem

h3
  font-size 1rem

p
  color #a2a2a2

img
  border-radius 6px
  max-width 100%

ul, li
  list-style-type none
  padding .6rem 0

a
  text-decoration none
  color #a2a2a2
  &:hover
    color #49bf9d
  @media screen and (max-width 768px)
    width 100%

strong
  color #fff

@media screen and (max-width 980px)
  h2
    font-size 1.5rem